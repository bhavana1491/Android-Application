<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/about_me_app_toolbar">


        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkgray"
            android:id="@+id/about_me_toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="About Me" />
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/my_pic"
        android:src="@drawable/prakash_bhavana"
        android:layout_below="@id/about_me_app_toolbar"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bhavana Prakash"
        android:layout_below="@id/my_pic"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:id="@+id/my_name"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="3607257634"
        android:textSize="20sp"
        android:textColor="@color/black"/>



</RelativeLayout>