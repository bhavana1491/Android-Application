<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/comm_app_toolbar">


        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkgray"
            android:id="@+id/comm_toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Committee Info" />
    </android.support.design.widget.AppBarLayout>

    <CheckBox
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:button="@drawable/favorite"
        android:layout_below="@+id/comm_app_toolbar"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/comm_fav_star"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/comm_fav_star">

        <TableRow

            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/committee_id_text"
                android:text="Committee ID:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:paddingBottom="10dp"

                />

            <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/committee_id"
            android:text="Committee ID"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:paddingBottom="10dp"
            />
        </TableRow>

        <TableRow

            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/committee_name_text"
                android:text="Name:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="0.4"
                android:paddingBottom="10dp"

                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/committee_name"
                android:text="Committee Name"
                android:gravity="right"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:paddingBottom="10dp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/committee_chamber_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Chamber:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/chamberImg"
                android:layout_weight="1"
                android:layout_marginLeft="100dp"
                android:gravity="right"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/committee_chamber"
                android:text="Chamber"
                android:gravity="right"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/committee_parent_text"
                android:text="Parent Committee:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"

                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/parent_committee_name"
                android:text="Parent Committee Name"
                android:gravity="right"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_alignParentRight="true"

                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/committee_contact"
                android:text="Contact:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"

                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/contact_no"
                android:text="Contact"
                android:gravity="right"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                />


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/committee_office"
                android:text="Office:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/office"
                android:text="office"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

        </TableRow>
    </TableLayout>
</RelativeLayout>